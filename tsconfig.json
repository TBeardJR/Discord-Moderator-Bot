{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "types": [
            "node"
        ],
        "watch": false,
        "sourceMap": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "lib": ["dom", "es2018"],
        "experimentalDecorators": true,
        "outDir": "./out"
    },

    "exclude": [
        "./src/tests/**/*",
        "./src/__mocks__/",
        "./src/mocks/**/*",
        "src/**/*.test.ts"
    ]
}